/* ==== font ==== */

body, textarea, pre, h1, h2, h3, h4, h5, h6 {
  font-family: {{=c.name}} !important;
  font-size: {{=c.size}} !important;
}

pre {
  line-height: {{=c.line}} !important;
}

/* ==== background ==== */

.foreground-bg{color:{{=c.background}} !important;}
.background-bg{background:{{=c.background}} !important;}

.foreground-desktop {color:{{=c.desktop}} !important;}
.background-desktop {background:{{=c.desktop}} !important;}

.background-subtle {background:{{=c.bgSubtle}} !important;}

.layout-container {
  border-top-color: {{=c.bgSubtle}}
}

.lm_goldenlayout {
  background: {{=c.bgSubtle}};
}

.lm_content {
  background: {{=c.background}};
}

.lm_tab {
  background: {{=c.background}}
}

.ranger .pane {
  border-right: 4px solid {{=c.bgSubtle}};
}

.ranger .active {
  background: {{=c.bgSubtle}};
}

.ranger.focus .active {
  background: {{=c.desktop}};
  outline-color: {{=c.bgSubtle}} !important;
}


select, textarea, input {
  border-color: {{=c.bgSubtle}} !important;
}

.button {
  background: {{=c.bgSubtle}};
  border-color: {{=c.bgSubtle}};
}

.button:hover {
  background: {{=c.background}};
}

::-webkit-scrollbar-thumb {
  background-color: {{=c.desktop}};
}

h4 {
  border-color: {{=c.bgSubtle}}
}

/* ==== foreground ==== */

.foreground-fg{color:{{=c.foreground}} !important;}
.background-fg{background:{{=c.foreground}} !important;}

.foreground-subtle {color:{{=c.fgSubtle}} !important;}

.lm_goldenlayout {
  color: {{=c.foreground}};
}

.ranger .directory {
  color: {{=c.fgSubtle}};
}

textarea:focus, input:focus, button:focus {
  border-color: {{=c.fgSubtle}} !important;
}

::-webkit-input-placeholder {
   color: {{=c.fgSubtle}};
}

:-moz-placeholder { /* Firefox 18- */
   color: {{=c.fgSubtle}};
}

::-moz-placeholder {  /* Firefox 19+ */
   color: {{=c.fgSubtle}};
}

:-ms-input-placeholder {  
   color: {{=c.fgSubtle}};
}

